extends main

block content
    .ui.large.top.fixed.hidden.menu
        .ui.container
            a.logo(href="/")
            a.item.menu-title(href="/" class= {'active': activeMenu === 'reports'})
                div
                    |Standups
                    .menu-title__sign= 'for ' + team.domain + '.slack.com'

            .right.menu
                if channel
                    form.item.ui.mini.form(action="/channel", method="POST")
                        select.dropdown#selectChannel(name="id", placeholder="Select channel")
                            each ch in team.channels
                                option(value=ch.id, selected=ch.id === channel.id)= ch.name
                    a.item(href="/settings" class= {'active': activeMenu === 'settings'})
                        i.icon.cog
                        |Settings
                a.item#sync-link(href="/sync")
                    i.icon.sync
                    |Sync data from slack api
                .item
                    a.ui.button(href="/logout") Log out
    .content
        block authorized_content
    //.ui.inverted.vertical.footer.segment
        .ui.container
            .ui.stackable.inverted.divided.equal.height.stackable.grid
                .three.wide.column
                    h4.ui.inverted.header About
                    .ui.inverted.link.list
                        a.item(href='#') Sitemap
                        a.item(href='#') Contact Us
                        a.item(href='#') Religious Ceremonies
                        a.item(href='#') Gazebo Plans
                .three.wide.column
                    h4.ui.inverted.header Services
                    .ui.inverted.link.list
                        a.item(href='#') Banana Pre-Order
                        a.item(href='#') DNA FAQ
                        a.item(href='#') How To Access
                        a.item(href='#') Favorite X-Men
                .seven.wide.column
                    h4.ui.inverted.header Footer Header
                    p
                        | Extra space for a call to action inside the footer that could help re-engage users.
block append scripts
    script.
      $('#selectChannel').on('change', function () {
        if (this.value) {
          $(this).closest('form').submit();
        }
      })
      $('#sync-link').click(function () {
        this.classList.add('active')
      })
