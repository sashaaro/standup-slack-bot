extends layout.pug

block dashboard_content
    div(class="row")
        div(class="col")
            form
                h4= 'Settings'
                div.form-group
                    label= 'Locale timezone'
                    select.form-control(name="timezone")
                        each timezone, index in timezoneList
                            - var selected = settings.timezone == index
                            option(value= index, selected=selected)= timezone

                div.form-group
                    label= 'Start meeting'
                    input.form-control(type="time", value= settings.start)
                div.form-group
                    label= 'End meeting'
                    input.form-control(type="time", value= settings.start)
                h4= 'Report'
                div.form-group
                    label= 'To channel'
                    select.form-control
                        each channel in channels
                            option(value= channel.id)= channel.name
                a(class="btn btn-outline-success" href="#")= 'Save settings'

