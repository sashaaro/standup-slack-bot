{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "lib": [
      "ES2021",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
